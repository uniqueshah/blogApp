<%- include('../partials/header') %> <%- include('../partials/navbar') %>

<main class="container" style="margin-top: 5rem">
  <%- include('../partials/flash') %>
  <div class="row">
    <div class="col-md-6 mt-3">
      <div class="card" id="card" style="width: 28rem">
        <img src="<%= blog.img %> " class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>
          <p class="card-text"><%= blog.desc %></p>
          <p class="card-text">
            <small class="text-muted"><%= blog.author %></small>
          </p>
          <a href="/blogs/<%= blog._id %>/edit " class="btn btn-warning"
            >Edit</a
          >
          <form action="/blogs/<%= blog._id %>?_method=DELETE " method="POST">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-md-6 mt-3">
      <h1>Leave a Review</h1>
      <form
        class="validated-form"
        action="/blogs/<%= blog._id %>/review "
        method="POST"
        style="max-width: 70%"
        novalidate
      >
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            class="form-range"
            min="0"
            max="5"
            name="rating"
            id="rating"
          />
        </div>
        <div class="mb-3">
          <label for="desc" class="form-label">Description</label>
          <textarea
            class="form-control"
            id="desc"
            cols="35"
            rows="3"
            name="comment"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
      </form>
      <div class="mb-3 mt-3">
        <% for (let review of blog.reviews){ %>
        <div class="card mb-3">
          <div class="card-header text-capitalize">
            <strong><%= review.user %></strong>
          </div>
          <div class="card-body">
            <h5 class="card-title">Rating: <%= review.rating %></h5>
            <p class="card-text"><%= review.comment %></p>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
